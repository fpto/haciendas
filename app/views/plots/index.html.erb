<% content_for(:page_header) do %>
  <%= "Lista de Potreros" %>
<% end %>
<% content_for :panel_heading do %>Potreros<% end %>
<p id="notice"><%= notice %></p>
<div class = "row pull-right">
  <%= link_to '+ Potrero', new_plot_path, :class => "btn btn-primary col-sm-6"%>
  <%= link_to '+ Evaluacion', new_plot_evaluation_path, :class => "btn btn-primary col-sm-6"%>
</div>
<div class="dataTables_wrapper form-inline dt-bootstrap no-footer">

  <div class = "row">
    <div clas="col-sm-12">
      <div class ="table-responsive">
        <h2>Bovino</h2>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Maleza</th>
              <th>Pasturas</th>
              <th>Cercas</th>
              <th>Pm.</th>
              <th>Hda.</th>
              <th colspan="3"> </th>
            </tr>
          </thead>

          <tbody>
            <% @plots.each do |plot| %>
              <% if plot.plot_type == 'bovino' then %>
                <tr>
                  <td><%= plot.number %></td>
                  <td><%= plot.weed_score %></td>
                  <td><%= plot.pasture_score %></td>
                  <td><%= plot.fences_score %></td>
                  <td><%= plot.average %></td>
                  <td><%= plot.ranch %></td>
                  <td>
                    <%= link_to image_tag("info.png", border: 0, title: "M치s informaci칩n"), plot_path(plot.plot_id)  %>
                    <%= link_to image_tag("editing.png", border: 0, title: "Editar"), edit_plot_path(plot.plot_id) %>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
        <h2> Ovino</h2>
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Maleza</th>
              <th>Pasturas</th>
              <th>Cercas</th>
              <th>Pm.</th>
              <th>Hda.</th>
              <th colspan="3"> </th>
            </tr>
          </thead>

          <tbody>
            <% @plots.each do |plot| %>
              <% if plot.plot_type == 'ovino' then %>
                <tr>
                  <td><%= plot.number %></td>
                  <td><%= plot.weed_score %></td>
                  <td><%= plot.pasture_score %></td>
                  <td><%= plot.fences_score %></td>
                  <td><%= plot.average %></td>
                  <td><%= plot.ranch %></td>
                  <td>
                    <%= link_to image_tag("info.png", border: 0, title: "M치s informaci칩n"), plot_path(plot.plot_id)  %>
                    <%= link_to image_tag("editing.png", border: 0, title: "Editar"), edit_plot_path(plot.plot_id) %>
                  </td>
                  <td></td>
                  <td></td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
