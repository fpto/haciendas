  <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">
    <div class = "row">
      <div clas="col-sm-12">
        <div class ="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th><%= sortable "number",  "#"     %></th>
                <th><%= sortable "water_score",  "Agua"     %></th>
                <th><%= sortable "pasture_score",  "Pasturas"     %></th>
                <th><%= sortable "fences_score",  "Cercas"     %></th>
                <th><%= sortable "average",  "Pm."     %></th>
                <th><%= sortable "ranch",  "Hda."     %></th>
                <th><%= sortable "plot_type",  "Tipo"     %></th>
                <th colspan="3"> </th>
              </tr>
            </thead>
            <tbody>
              <% @plots.each do |plot| %>
                  <tr>
                    <td><%= plot.number %></td>
                    <td><%= plot.water_score %></td>
                    <td><%= plot.pasture_score %></td>
                    <td><%= plot.fences_score %></td>
                    <td><%= plot.average %></td>
                    <td><%= plot.ranch %></td>
                    <td><%= plot.plot_type %></td>
                    <td>
                      <%= link_to image_tag("info.png", border: 0, size: "15x15", title: "Más información"), plot_path(plot.plot_id)  %>
                      <% if current_user && (current_user.admin?)%>
                        <%= link_to image_tag("editing.png", border: 0, size: "15x15", title: "Editar"), edit_plot_path(plot.plot_id) %>
                      <% end %>
                    </td>
                  </tr>
              <% end %>
            </tbody>
          </table>

        </div>
      </div>
    </div>
    <div class = "flickr_pagination">
      <%= will_paginate @latest_weights, :previous_label => 'Anterior', :next_label => 'Siguiente' %>
    </div>
  </div>
