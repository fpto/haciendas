<div class="login">
  <div class="container signup">
    <div class="form">

    <h1>Registro de usuarios</h1>

    <%= form_for(@user) do |f| %>
      <div class="form-group">
        <%= f.text_field :first_name, :placeholder => "Primer nombre" %>
      </div>
      <div class="form-group">
        <%= f.text_field :last_name, :placeholder => "Apellido" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, :placeholder => "Correo electrónico" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, :placeholder => "Contraseña" %>
      </div>
      <%= f.submit "Crear cuenta", class: "btn-submit" %>
    <% end %>


    </div>
  </div>
</div>
