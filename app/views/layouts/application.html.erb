<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
      <%= content_for?(:title) ? yield(:title) : "Haciendas" %>
    </title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Haciendas" %>">
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag asset_path('favicon.png'), :rel => 'icon', :type =>  'image/png' %>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="../dist/modules/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="../dist/modules/fontawesome/css/all.min.css">

    <!-- Plugins -->

    <!-- Template CSS -->
    <link rel="stylesheet" href="../dist/css/style.css">
    <link rel="stylesheet" href="../dist/css/components.css">

  </head>

  <body>
    <!-- Sidebar outter -->

    <div id="wrapper" class="">
      <%= render 'layouts/navbar' %>
    </div>

    <div id="page-wrapper">
      <%= render 'layouts/title' %>
      <%= render 'layouts/messages' %>

      <div>
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= content_for?(:panel_heading) ? yield(:panel_heading) : "Dashboard" %>
          </div>
          <div class="panel-body">
            <%= yield %>
          </div>
        </div>
      </div>
    </div>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= content_for?(:extra_scripts) ? yield(:extra_scripts) : nil %>
  </body>
</html>
