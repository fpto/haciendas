<p id="notice"><%= notice %></p>
<div class ="container">
  <h1>Plot Evaluations</h1>

  <table class ="table">
    <thead>
      <tr>
        <th>Potrero</th>
        <th>Fecha</th>
        <th>Maleza</th>
        <th>Pasturas</th>
        <th>Cercas</th>
        <th>Promedio</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @plot_evaluations.order('plot_id').each do |plot_evaluation| %>
        <tr>
          <td><%= plot_evaluation.plot_id %></td>
          <td><%= plot_evaluation.date.strftime("%d/%m/%y") %></td>
          <td><%= plot_evaluation.water_score %></td>
          <td><%= plot_evaluation.pasture_score %></td>
          <td><%= plot_evaluation.fences_score %></td>
          <td><%= ((plot_evaluation.water_score + plot_evaluation.pasture_score + plot_evaluation.fences_score).to_f / 3).round(2)  %></td>
          <td><%= link_to 'M', plot_evaluation,:title => "Más detalles" %></td>
          <td><%= link_to 'E', edit_plot_evaluation_path(plot_evaluation),:title => "Editar" %></td>
          <td><%= link_to 'B', plot_evaluation, method: :delete, data: { confirm: 'Estás seguro?', :title => "Borrar"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva evaluación de potrero', new_plot_evaluation_path %>
</div>
