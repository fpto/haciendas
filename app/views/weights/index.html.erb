<p id="notice"><%= notice %></p>

<div class = "container">
  <div class = "row">
    <h2 class="col-sm-6">Pesos</h2>
    <%= link_to 'Nuevo Peso', new_weight_path, :class => "btn btn-primary new-btn col-sm-6"%>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Animal</th>
        <th>Fecha</th>
        <th>Peso</th>
        <th>Nota</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>

    <tbody>
      <% @weights.order('animal_id').each do |weight| %>
        <tr>
          <td><%= weight.animal_id %></td>
          <td><%= weight.date.strftime("%d/%m/%y") %></td>
          <td><%= weight.weight %></td>
          <td><%= weight.note %></td>
          <td>
            <%= link_to 'M', weight %>
            <%= link_to 'E', edit_weight_path(weight) %>
            <%= link_to 'B', weight, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo Peso', new_weight_path, :class => "btn btn-primary btn-lg" %>
</div>
