<p id="notice"><%= notice %></p>
<div class = "container">
  <p>
    <h1><strong>Animal number: <%= @animal.animal_number %> </h1>
  </p>

  <p>
    <strong>Specie:</strong>
    <%= @animal.species %>
  </p>

  <p>
    <strong>Birthday:</strong>
    <%= @animal.birthday %>
  </p>

  <%= link_to 'Editar', edit_animal_path(@animal) %> |
  <%= link_to 'Atrás', animals_path %> |
  <%= link_to 'Nuevo animal', new_animal_path%>
</div>

<div class="container">
  <h4>Historial de Peso</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Fecha</th>
        <th>Peso</th>
        <th>Acciones</th>
      </tr>
    </thead>

  <tbody>
    <% @weights.each do |w| %>
      <tr>
        <td><%= w.date %></td>
        <td><%= w.weight %></td>
        <td><%= link_to "Más info", weight_path(w) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
