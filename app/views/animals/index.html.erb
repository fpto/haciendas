<% content_for(:page_header) do %>
  <%= "Lista de Animales" %>
<% end %>
<% content_for :panel_heading do %>Animales<% end %>
<p id="notice"><%= notice %></p>
<div class = "row pull-right">
  <%= link_to '+ Animal', new_animal_path, :class => "btn btn-primary col-sm-6"%>
  <%= link_to '+ Peso', new_weight_path, :class => "btn btn-primary col-sm-6"%>
</div>
<div class="dataTables_wrapper form-inline dt-bootstrap no-footer">

  <div class = "row">
    <div clas="col-sm-12">
      <div class ="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>#</th>
        <!--<th>Specie</th>-->
            <th>En <br />Hacienda</th>
            <th>Último <br />Peso</th>
            <th> Sin <br />pesar </th>
            <th>GDP</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @animals.order('id').each do |animal| %>
            <tr>
              <td><%= animal.animal_number %></td>
              <td><%= animal.days_in_ranch %> </td>
              <td><%= animal.last_weight %></td>
              <td><%= animal.days_since_last_weight %></td>
              <td><%= animal.daily_gained %></td>
              <!--<td><%= animal.species %></td>-->
              <td><%= link_to image_tag("info.png", border: 0, size: "10x10", title: "Más información"), animal %>
                <% if current_user && (current_user.editor? or  current_user.admin?)%>
                <%= link_to image_tag("editing.png", border: 0, title: "Editar"), edit_animal_path(animal) %>
                <% end %>
                <% if current_user && current_user.admin? %>
                <%= link_to image_tag("close.png", border: 0, title: "Borrar"), animal, method: :delete, data: { confirm: 'Estás seguro?' } %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>
