<% content_for(:page_header) do %>
  <%= "Lista de Animales" %>
<% end %>
<% content_for :panel_heading do %>Animales<% end %>
<p id="notice"><%= notice %></p>
<div class="page-wrapper" style="min-height: 731px;">
  <div class = "row">
    <div class = "page-wrapper new_buttons">
      <%= link_to '+ Potrero', new_plot_path, :class => "btn btn-primary col-xs-6"%>
      <%= link_to '+ Evaluacion', new_plot_evaluation_path, :class => "btn btn-primary col-xs-6"%>
    </div>
  </div>
  <div class = "row">
        <%= form_tag animals_path, :method => 'get' do %>
        <div class="form-group input-group page-wrapper search-bar">
            <%= text_field_tag :search, params[:search], :class=>"form-control", :placeholder => "Ingrese el número de animal" %>
            <span class="input-group-btn">
              <%= submit_tag 'Buscar', :name => nil, :class=>"btn btn-default" %>
            </span>
        </div>
        <% end %>
  </div>
  <!--Animals Table-->
  <div class="dataTables_wrapper form-inline dt-bootstrap no-footer">

    <div class = "row">
      <div clas="col-sm-12">
        <div class ="table-responsive">
          <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= sortable "animal_number",  "#"     %></th>
              <th><%= sortable "ranch", "Hacienda"       %></th>
              <th><%= sortable "species", "Especie"      %></th>
              <th><%= sortable "last_weight", "Peso"     %></th>
              <th><%= sortable  "days_since_last_weight", "Pesado" %> </th>
              <th><%= sortable "daily_gain" ,"GDP"       %></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @latest_weights.each do |animal| %>
              <tr>
                <td><%= animal.animal_number %></td>
                <td><%= animal.ranch %> </td>
                <td><%= animal.species %> </td>
                <td><%= animal.last_weight %></td>
                <td><%= animal.days_since_last_weight %></td>
                <td><%= animal.daily_gain.round(2) %></td>
                <td><%= link_to image_tag("info.png", border: 0, size: "15x15", title: "Más información"), animal_path(animal.animal_id) %>
                  <% if current_user && (current_user.editor? or  current_user.admin?)%>
                  <%= link_to image_tag("editing.png", border: 0,size: "15x15", title: "Editar"), edit_animal_path(animal.animal_id) %>
                  <% end %>
                  <% if current_user && current_user.admin? %>
                  <%= link_to image_tag("close.png", border: 0, size: "15x15", title: "Borrar"), animal_path(animal.animal_id), method: :delete, data: { confirm: 'Estás seguro?' } %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        </div>
      </div>
    </div>
  </div>
  <div class = "flickr_pagination">
    <%= will_paginate @latest_weights, :previous_label => 'Anterior', :next_label => 'Siguiente' %>
  </div>
</div>
