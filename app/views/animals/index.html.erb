<p id="notice"><%= notice %></p>
<div class="container">
  <h2>Animales</h2>
  <table class="table">
    <thead>
      <tr>
        <th># de Animal</th>
        <th>Species</th>
        <th>Nacimiento</th>
        <th>Acciones</th>
      </tr>
    </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.animal_number %></td>
        <td><%= animal.species %></td>
        <td><%= animal.birthday %></td>
        <td><%= link_to 'Mostrar', animal %></td>
        <td><%= link_to 'Editar', edit_animal_path(animal) %></td>
        <td><%= link_to 'Borrar', animal, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

